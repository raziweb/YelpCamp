<% layout('layouts/boilerplate') %>
<!-- Form to edit an existing Campground -->
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <!--Campground Title -->
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %>" required>
            </div>
            <div class="mb-3">
                <!--Campground Location -->
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location%>" required>
            </div>
            <div class="mb-3">
                <!--Campground Image -->
                <label for="image" class="form-label">Add Campground Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <!--Campground price -->
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]" value="<%= campground.price %> " required>
                    <!-- span's id and input's aria-describedby connects them together  -->
                </div>
            </div>

            <div class="mb-3">
                <!-- Campground Description -->
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required>
                    <%= campground.description %> 
                </textarea>
            </div>
            <div class="mb-3">
                <% campground.images.forEach((img,i)=>{ %>
                    <img src="<%= img.thumbnail %> " class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <!-- Creating an array of selected images with their file path -->
                        <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%= img.filename %>">
                        <label for="image-<%= i %>">delete?</label>
                    </div>
                <% }) %> 
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Edit Campground</button>
            </div>
        </form>
    </div>
</div>
