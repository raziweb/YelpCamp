<!-- Form to add a new Campground -->
<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" class="needs-validation" novalidate enctype="multipart/form-data"> 
            <div class="mb-3">
                <!--Campground Title -->
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
            </div>
            <div class="mb-3">
                <!--Campground Location -->
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
            </div>
            <!-- <div class="mb-3"> -->
                <!--Campground Image -->
                <!-- <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="campground[image]" required>
            </div> -->
            <input type="file" name="image" id="image" multiple>
            <div class="mb-3">
                <!--Campground price -->
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]" required>
                    <!-- span's id and input's aria-describedby connects them together  -->
                </div>
            </div>

            <div class="mb-3">
                <!-- Campground Description -->
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds" class="text-muted">All Campgrounds</a>
    </div>
</div>


